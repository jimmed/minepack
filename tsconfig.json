{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2020"]
  },
  "include": ["packages/*/src"],
  "exclude": [
    "node_modules/",
    "packages/*/lib/",
    "packages/**/__tests__/",
    "packages/**/__mocks__/"
  ]
}
